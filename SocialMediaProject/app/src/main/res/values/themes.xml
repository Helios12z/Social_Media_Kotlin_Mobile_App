<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SocialMediaProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors with modern gradient -->
        <item name="colorPrimary">@color/primary_gradient_start</item>
        <item name="colorPrimaryContainer">@color/primary_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/neon_green</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface -->
        <item name="android:windowBackground">@drawable/bg_main_gradient</item>
        <item name="colorSurface">@color/glass_background</item>
        <item name="colorOnSurface">@color/text_color</item>
        
        <!-- Font Family - Apply Inter font to entire app -->
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="fontFamily">@font/inter_font_family</item>
        
        <!-- Modern glass UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/appsplashicon</item>
        <item name="postSplashScreenTheme">@style/Theme.SocialMediaProject</item>
    </style>
</resources>
