<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearance.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">32dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TopRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Modern Glass Card Style -->
    <style name="GlassCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/glass_background</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeColor">@color/glass_border</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Modern Button Style -->
    <style name="GlassButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_gradient_start</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>