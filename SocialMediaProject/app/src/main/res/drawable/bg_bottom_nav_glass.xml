<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Main glass background with black tint and blur effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Blur overlay effect with subtle black gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#08000000"
                android:centerColor="#0A000000"
                android:endColor="#0D000000"
                android:angle="90" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Glass highlight border with subtle white -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#1AFFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Inner subtle glow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#10FFFFFF" />
            <corners android:radius="27dp" />
        </shape>
    </item>
    
</layer-list>